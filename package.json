{
  "name": "fukke-zenn-contents",
  "private": true,
  "description": "Zennの記事を管理するためのリポジトリ",
  "scripts": {
    "textlint": "textlint \"./{articles,books}/*.md\"",
    "textlint:fix": "textlint --fix \"./{articles,books}/*.md\"",
    "preview": "npx zenn-cli preview",
    "create:article": "npx zenn-cli new:article --slug $(date +'%Y%m%d')_hoge"
  },
  "devDependencies": {
    "textlint": "^14.3.0",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^10.0.1"
  }
}
