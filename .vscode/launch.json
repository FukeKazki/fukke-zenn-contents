    "version": "0.2.0",
    "compounds": [
        {
            "name": "Preview",
            "configurations": [
                "Start Server",
                "Launch Chrome",
            ]
        }
    ],
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Start Server",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run preview"
        }
    ]
}